
// defaults
button-gradient   ?= false



font_family    ?= 'lucida pro', 'myriad pro', sans-serif, arial
font_size      ?= 16px

// spacing
spacing        ?= 0.6em

/* font */
basefont       ?= 1em

// layout
page_width     ?= spacing * 100
page_margin    ?= spacing * 2
nav_margin     ?= spacing * 4
nav_width      ?= spacing * 20


// colors
bg_color       ?= #fe
font_color     ?= #3
link_color     ?= #981
button_color   ?= #009
line_color     ?= #d
focus_color    ?= #75b9f0


// is_dark        ?= dark(bg_color)


// animation speed
medium         ?= .4s
fast           ?= .2s
slow           ?= .8s



// helper units for sizing
u              = spacing
uh             = spacing / 2
u2             = spacing * 2
u3             = spacing * 3
u4             = spacing * 4
u5             = spacing * 5
u6             = spacing * 6

// font sizing
smaller        = basefont * 0.9
small          = basefont * 0.7
larger         = basefont * 1.2
large          = basefont * 1.5
x-large        = basefont * 2
