
/*
   - button for action, link for lin
   - a site wide element - many times used outside form element
   - ideally only one primary action per page = visually prominent
   - dropdown buttons are overkill, a wrong UI pattern

*/

hover-bg(color)
   bg color
   transition background-color fast

   &:hover
      bg lighten(color, 5)

   &:active
      bg darken(color, 5)

hover-gradient(color)
   linear-gradient color

   &:hover
      linear-gradient lighten(color, 5)

   &:active
      background-image none
      bg color


button
   padding 0 u2
   border-radius u4
   font #e center
   cursor pointer
   border 0
   line-height u3
   text-shadow 0 -1px 0 hsla(0, 0, 0, 0.25)
   hover-bg color_button
   hover-gradient color_button

   &:active
      box-shadow inset 0 2px 4px rgba(0, 0, 0, 0.15), 0 1px 2px rgba(0, 0, 0, 0.05)

   &:focus
      outline thin dotted #3
      outline 2px auto -webkit-focus-ring-color
      outline-offset 2px

   &:disabled
      cursor default
      background-image none
      bg #c
      box-shadow none
