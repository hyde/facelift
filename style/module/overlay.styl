
body.is-overlayed
   overflow hidden

.overlay
   fixed -999em 0
   size 100%
   opacity 0
   transition opacity .8s
   bg rgba(#0, 0.5)

   &.is-active
      top 0
      opacity 1
      z-index 10

   > div
      relative auto auto
      block 500px 300px 10px
      margin 5% auto
      shadow 20px
      bg #f9
      transition all .5s
      overflow auto
      padding 15px 30px

      .is-active&
         width 700px
         height 500px