
html, body
   height 100%
   bg bg_color


// font
html
   font-family font_family
   font-size font_size

#container
   min-height 100%
   position relative


// fade effect
#main
   opacity 0
   transition opacity .5s

.is-loaded
   #main
      opacity 1


#main-inner
   position relative
   clearfix()

// inner elements
#header-inner, #hero-inner, #main-inner, #footer-inner
   max-width page_width - page_margin
   margin 0 auto
   padding 0 page_margin
