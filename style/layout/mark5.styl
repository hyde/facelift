
/*
   Typically mark5 content is placed inside #content area
   A body class "responsive" makes this content work on all devices.

   .responsive .level1
      mark5 15px section

   http://css-tricks.com/dont-overthink-it-grids/
*/
mark5(padding, cell = '*')

   // single cell
   > {cell}
      vertical-align top
      display inline-block
      padding padding

   // 2 cols
   &.has2 > {cell}
      width 50%

   // 3 cols
   &.has3 > {cell}
      width 33.3%

   // 4 cols
   &.has4 > {cell}
      width 25%
      text-align center

   // 6 cols
   &.has6 > {cell}
      width 16.6%
      text-align center


   @media (min-width: 530px) and (max-width: 750px)

      // 2 --> 1 + 1
      &.has2 > {cell}
         display block
         width 80%
         margin 0 auto

      // 3 --> 2 + 1
      &.has3
         > {cell}
            width 50%

         .index3
            width 80%
            display block
            margin 0 auto

   // mobile: 1 column only
   @media (max-width: 530px)
      hgroup
         font-size 80%
         width 100%

      &.has2, &.has3
         > {cell}
            width 100%

   // 4 --> 2 + 2
   @media (max-width: 750px)
      &.has4 > {cell}
         width 50%

      &.has6 > {cell}
         width 33.3%
