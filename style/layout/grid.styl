
.level1

   // all cells
   > div
      vertical-align top
      display inline-block
      padding grid_padding

   // scalable images
   img
      max-width 100%

   // hero title
   hgroup
      width 80%
      margin 0 auto
      text-align center
      padding grid_padding


// 2 cols
.has2 > div
   width 50%

// 3 cols
.has3 > div
   width 33.3%

// 4 cols
.has4 > div
   width 25%
   text-align center


// smaller font
@media (min-width: 750px) and (max-width: 850px)
   .level1
      font-size 85%

// column reorder
@media (min-width: 530px) and (max-width: 750px)

   // 2 --> 1 + 1
   .has2 > div
      display block
      width 80%
      margin 0 auto

   // 3 --> 2 + 1
   .has3
      > div
         width 50%

      .index3
         width 80%
         display block
         margin 0 auto

// mobile: 1 column only
@media (max-width: 530px)
   .level1
      hgroup
         font-size 80%
         width 100%

   .has2, .has3
      > div
         width 100%

// 4 --> 2 + 2
@media (max-width: 750px)
   .has4
      > div
         width 50%
