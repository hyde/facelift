   -moz-box-sizing border-box
   -webkit-box-sizing border-box

#content
   width 980px

.level2
   background-color #e
   height 200px
   vertical-align bottom
   text-align center
   font-size 50px
   padding 30px
   border 3px solid blue


// begin grid system
.col2
   .level2
      display inline-block
      width 50%

.col3
   .level2
      display inline-block
      width 33.333%

.col4
   .level2
      display inline-block
      width 25%


@media (min-width: 768px) and (max-width: 980px)
   .col3
      .index1, .index2
         width 50%

      .index3
         width 100%

@media (max-width: 768px)
   .col2, .col3
      .level2
         width 100%


